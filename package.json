{
  "name": "planner-pwa",
  "version": "1.0.0",
  "description": "A simple planner PWA wrapped in Electron",
  "author": "Arman7777-coder",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win"
  },
  "build": {
    "appId": "com.planner.pwa",
    "productName": "My Planner",
    "icon": false,
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "electron-packager": "^17.1.2"
  }
}
