{
  "name": "windows-11-planner",
  "version": "1.0.4",
  "description": "Windows 11 Style Task Management App",
  "author": "NewHope",
  "main": "main.js",
  "homepage": "https://github.com/Arman7777-coder/windows-11-planner",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-msix": "electron-builder --win --publish never",
    "build-appx": "electron-builder --win appx --publish never",
    "dist": "electron-builder --publish never"
  },
  "build": {
    "appId": "com.newhope.focusplanner",
    "productName": "Focus Planner",
    "copyright": "Copyright Â© 2025 NewHope",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!build/**/*",
      "!*.md",
      "!BUILD_README.md",
      "!SHARE_README.md",
      "!STORE_README.md"
    ],
    "win": {
      "target": [
        {
          "target": "appx",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "icons/icon-512.png",
      "sign": false,
      "verifyUpdateCodeSignature": false,
      "cscLink": "C:/Users/Lenovo/certs/storecert.pfx",
      "cscKeyPassword": "1011"
    },
    "appx": {
      "applicationId": "NewHope.FocusPlanner",
      "publisher": "CN=BBF25640-AF6B-4DC7-9F91-5C8D3847C5CF",
      "publisherDisplayName": "NewHope",
      "identityName": "50688NewHope.FocusPlanner",
      "displayName": "Focus Planner",
      "backgroundColor": "#2563EB",
      "languages": ["en-US"]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "@microsoft/store": "^1.0.0"
  }
}
