{
  "name": "windows-11-planner",
  "version": "1.0.0",
  "description": "Windows 11 Style Task Management App",
  "author": "Arman7777-coder",
  "main": "main.js",
  "homepage": "https://github.com/Arman7777-coder/windows-11-planner",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-msix": "electron-builder --win --publish never",
    "build-msix-script": "node build-msix.js",
    "fix-build": "node fix-build.js",
    "force-clean": "node force-clean.js",
    "dist": "electron-builder --publish never"
  },
  "build": {
    "appId": "com.arman7777coder.windows11planner",
    "productName": "Windows 11 Planner",
    "copyright": "Copyright Â© 2025 Arman7777-coder",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!build/**/*",
      "!*.md",
      "!BUILD_README.md",
      "!SHARE_README.md",
      "!STORE_README.md"
    ],
    "win": {
      "target": [
        {
          "target": "appx",
          "arch": ["x64"]
        }
      ],
      "certificateFile": false,
      "certificatePassword": false,
      "verifyUpdateCodeSignature": false,
      "sign": false
    },
    "appx": {
      "applicationId": "Windows11Planner",
      "publisher": "CN=Arman7777-coder",
      "publisherDisplayName": "NewHope",
      "identityName": "Windows11Planner",
      "displayName": "Windows 11 Planner",
      "backgroundColor": "#2563EB",
      "languages": ["en-US"]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "electron-packager": "^17.1.2"
  }
}
